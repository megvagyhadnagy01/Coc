<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.jsfspring.curddemo.entity.FoglalasEntity</class>
        <class>com.jsfspring.curddemo.entity.JaratEntity</class>
        <class>com.jsfspring.curddemo.entity.RepterEntity</class>
        <class>com.jsfspring.curddemo.entity.RepulojegyEntity</class>
        <class>com.jsfspring.curddemo.entity.UtasEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://remotemysql.com:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>
</persistence>
